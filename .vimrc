set cursorline
set number
set ignorecase
set confirm
set wrap
set encoding=utf-8
set ic

" turn off beep sound
set noeb

" hightlight current char
set cursorline

filetype indent on
syntax enable
set ai
set tabstop=4
set shiftwidth=4
set ruler
set expandtab
set backspace=2

" highlight seraching word
set hlsearch

" set copy board shared with system
set clipboard=unnamed
set mouse=a
